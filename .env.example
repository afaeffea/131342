PORT=3000

# Любая длинная строка, в проде обязательно поменяйте
SESSION_SECRET=super-secret-session-key-change-me-in-production

# PostgreSQL — вариант 1: единый URL (Railway, Render и т.д.)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# PostgreSQL — вариант 2: отдельные переменные (для локальной разработки)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lawyer_chatbot
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# URL вебхука n8n, который будет обрабатывать сообщения чата
N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/lawyer-chat

# Environment (development, production)
NODE_ENV=development
